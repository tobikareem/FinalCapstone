<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalCap.View.AddNewCoursePage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Clicked="OnSave_Clicked"/>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Course ID"  FontSize="Medium"/>
            <Entry Text="{Binding CourseModel.HeadLines}" FontSize="Small"/>
            
            <Label Text="Course Name" FontSize="Medium"/>
            <Editor Text="{Binding CourseModel.HeadLines}"></Editor>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>